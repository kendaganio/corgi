{
  "name": "corgi",
  "version": "0.0.1",
  "description": "The css equivalent of a small and stupid log of fur.",
  "main": "corgi.css",
  "scripts": {
    "clean": "rimraf css",

    "build": "npm run clean && npm run sass && npm run autoprefix ",
    "build-docs": "npm run docs && npm run autoprefix",
    "build-min": "npm run clean && npm run sass && npm run minify",

    "autoprefix": "postcss --use autoprefixer --map false css/corgi.css --output css/corgi.css",
    "minify": "postcss --use autoprefixer cssnano --map false css/corgi.css --output css/corgi.min.css",

    "sass": "node-sass --output-style expanded --source-map true corgi.sass css/corgi.css",
    "docs": "node-sass --output-style expanded --source-map true docs/corgi-docs.sass docs/css/corgi-docs.css",

    "start": "npm run sass -- --watch",
    "start-docs": "npm run docs -- --watch",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kendaganio/corgi.git"
  },
  "keywords": [
    "css",
    "flexbox",
    "corgi"
  ],
  "author": "Ken-Lauren Daganio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kendaganio/corgi/issues"
  },
  "homepage": "https://github.com/kendaganio/corgi#readme",
  "dependencies": {
    "autoprefixer": "^7.2.5",
    "cssnano": "^3.10.0",
    "node-sass": "^4.7.2",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2"
  }
}
